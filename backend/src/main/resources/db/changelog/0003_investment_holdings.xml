<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="11" author="user">
        <createTable tableName="investment_holdings">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="asset_type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="asset_symbol" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="asset_name" type="varchar(255)"/>
            <column name="quantity" type="numeric(15,4)"/>
            <column name="purchase_price" type="numeric(15,4)"/>
            <column name="current_price" type="numeric(15,4)"/>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="investment_holdings"
            baseColumnNames="account_id"
            constraintName="fk_holdings_account"
            referencedTableName="accounts"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>

