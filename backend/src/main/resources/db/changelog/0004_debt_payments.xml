<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Add new columns to debts table -->
    <changeSet id="12" author="user">
        <addColumn tableName="debts">
            <column name="debt_type" type="varchar(50)" defaultValue="ACCOUNT_DEBT">
                <constraints nullable="false"/>
            </column>
            <column name="payment_type" type="varchar(50)" defaultValue="SINGLE_DATE">
                <constraints nullable="false"/>
            </column>
            <column name="payment_frequency" type="varchar(50)"/>
            <column name="total_installments" type="int"/>
            <column name="paid_installments" type="int" defaultValueNumeric="0"/>
            <column name="installment_amount" type="numeric(15,2)"/>
            <column name="start_date" type="date"/>
            <column name="remaining_amount" type="numeric(15,2)"/>
            <column name="description" type="varchar(500)"/>
        </addColumn>
    </changeSet>

    <!-- Create debt_payments table -->
    <changeSet id="13" author="user">
        <createTable tableName="debt_payments">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="debt_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="payment_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="numeric(15,2)">
                <constraints nullable="false"/>
            </column>
            <column name="payment_number" type="int"/>
            <column name="status" type="varchar(50)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>
            <column name="paid_date" type="date"/>
            <column name="note" type="varchar(500)"/>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="debt_payments"
            baseColumnNames="debt_id"
            constraintName="fk_payment_debt"
            referencedTableName="debts"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>

