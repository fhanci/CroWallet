<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Add account payment tracking columns to debt_payments table -->
    <changeSet id="14" author="user">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="debt_payments" columnName="account_id"/>
            </not>
        </preConditions>
        <addColumn tableName="debt_payments">
            <column name="account_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="paid_currency" type="varchar(10)">
                <constraints nullable="true"/>
            </column>
            <column name="used_exchange_rate" type="numeric(15,6)">
                <constraints nullable="true"/>
            </column>
            <column name="paid_amount" type="numeric(15,2)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addForeignKeyConstraint
            baseTableName="debt_payments"
            baseColumnNames="account_id"
            constraintName="fk_payment_account"
            referencedTableName="accounts"
            referencedColumnNames="id"
            onDelete="SET NULL"/>
    </changeSet>

</databaseChangeLog>
